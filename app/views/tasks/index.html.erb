<h1>My Tasks</h1>
<div class="cards">

    <% @tasks.each do |task| %>
      <div class="form-check">
        <%= form_with model: task, url: task_completed_path(task) do |f| %>
          <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault"  onclick="this.form.submit()">
          <label class="form-check-label" for="flexCheckDefault">
            <%= link_to task.title, task_path(task), class: 'text-decoration-none text-black' %>
          </label>
        <% end %>
      </div>
    <% end %>
  </div>
  <div>
    <button type="button" class="btn btn-danger">
        <%= link_to "Create New", new_path %>
    </button>
  </div>
